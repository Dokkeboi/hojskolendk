---
const { text } = Astro.props;
const { href="#", target="_self"} = Astro.props;
---

<a href={href} class="underline" target={target}>
<button>
  <p class="h5-web uppercase">{text}</p>
</button>
</a>

<style>
  button {
    /* reset */
    font: inherit;
    cursor: pointer;

    /* styling */
    padding: 5px 30px ;
    border-radius: 3px;
    background-color: var(
      --color-primary-suntrail
    );
    color: var(--color-primary-driftsand);
    border: 2px solid var(--color-primary-suntrail);
  }

  button:hover {
    background-color: var(--color-primary-driftsand);
    color: var(--color-primary-suntrail);
    border: 2px solid var(--color-primary-suntrail);

  }
</style>
