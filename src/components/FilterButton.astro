---
const {buttontext} = Astro.props;
---


<button class="filter-btn text-primary-suntrail border-2 border-primary-suntrail px-4 py-1 rounded text-s font-bold hover:bg-primary-suntrail hover:text-white transition-colors flex items-center gap-2">
  <span class="text-font text-8  button-text">{buttontext}</span>
  <span class="text-font button-x hidden">Ã—</span>
</button>


<script>
document.addEventListener('DOMContentLoaded', () => {
  // Add click handlers to all filter buttons
  document.querySelectorAll('.filter-btn').forEach(button => {
    const buttonX = button.querySelector('.button-x');
   
    button.addEventListener('click', () => {
      const isActive = button.classList.contains('bg-primary-suntrail');
     
      if (isActive) {
        // If button is already active, deactivate it
        button.classList.remove('bg-primary-suntrail', 'text-white');
        button.classList.add('text-primary-suntrail');
        buttonX.classList.add('hidden');
      } else {
        // Add active class to clicked button (same as hover state)
        button.classList.remove('text-primary-suntrail');
        button.classList.add('bg-primary-suntrail', 'text-white');
        buttonX.classList.remove('hidden');
      }
    });
  });
});
</script>


