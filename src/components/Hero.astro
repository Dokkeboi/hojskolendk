---
import ButtonOrange from "./ButtonOrange.astro";

const {
  mobileSrc = '/imgs/mobile-hero.svg',
  desktopSrc = '/imgs/web-hero.svg',
  alt = 'Hero',
} = Astro.props;
---

<div class="relative w-full">
  <!-- responsive image: desktop when viewport >= 768px, mobile otherwise -->
  <picture>
    <source media="(min-width: 1040px)" srcset={desktopSrc} />
    <img src={mobileSrc} alt={alt} class="w-full h-auto block" />
  </picture>

  <!-- overlay area: absolute and uses percentage positioning so overlays scale with the image -->
  <div class="absolute inset-0">
    <!-- centered CTA (example) - percentages keep it in the same relative place as the image scales -->
    <div id="hero-cta" class="absolute invisible lg:visible z-1" style="left:30%; top:65%; transform:translate(-50%,-50%);">
<ButtonOrange text="LÃ¦s mere om rejserne">
    </div>

    <!-- decorative object bottom-right (example) -->
  </div>
</div>

<!-- small client-side animation using Motion One (project includes `motion`) -->
<script type="module">
  import { animate } from 'motion';
  const el = document.getElementById('hero-cta');
  if (el) {
    // a gentle up-down loop so the overlay feels alive; adjust or remove as needed
    animate(el, { y: [0, -8, 0] }, { duration: 2.5, easing: 'ease-in-out', repeat: Infinity });
  }
</script>
