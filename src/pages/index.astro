---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Titel">
  <article>
    <h1 class="outline-h1-web">Headline 1</h1>
    <h1 class="outline-h2-web">Headline 1</h1>
    <h1 class="outline-h3-web">Headline 1</h1>
    <h1 class="outline-h1-mobile">Headline 1</h1>
    <h1 class="outline-h2-mobile">Headline 1</h1>
    <h1 class="outline-h3-mobile">Headline 1</h1>
    <Button>Klik!</Button>
    <p>
      Link til <Link
        href="https://www.kea.dk"
        target="_blank">En anden side</Link
      >
    </p>
    <Image src={thumbsup} alt="" />
  </article>
</MainLayout>
