</section>
    <!-- Filter Toggle Button -->
    <section class="px-4  relative">
        <div class="max-w-400 mx-auto relative">
            <button id="filter-toggle-btn" class=" text-primary-charcoal px-6 py-3 rounded-lg font-bold border-2 hover:bg-primary-cloudstone transition-colors flex items-center gap-2">
