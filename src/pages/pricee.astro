                        <FilterButton buttontext="Afrika"></FilterButton>
                        <FilterButton buttontext="Australien"></FilterButton>
                        <FilterButton buttontext="Nordamerika"></FilterButton>
                        <FilterButton buttontext="Sydamerika"></FilterButton>
                    </div>
